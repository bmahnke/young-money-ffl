{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "watch:tailwind": "postcss public/tailwind.css -o public/index.css -w",
    "build:tailwind": "cross-env NODE_ENV=production postcss public/tailwind.css -o public/index.css",
    "build": "yarn run build:tailwind && rollup -c",
    "start": "sirv public -s",
    "serve": "serve public -p 80",
    "dev": "concurrently \"rollup -c -w\" \"yarn run watch:tailwind\"",
    "clean": "yarn clean.npm && yarn clean.lockfiles",
    "clean.npm": "find . -name \"node_modules\" -exec rm -rf '{}' +",
    "clean.lockfiles": "find . -name \"package-lock.json\" -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "autoprefixer": "^9.8.5",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.0.0",
    "tailwindcss": "^1.5.2",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "axios": "0.21.1",
    "dayjs": "^1.10.4",
    "espn-fantasy-football-api": "^0.16.1",
    "sirv-cli": "^1.0.0",
    "svelte-routing": "^1.5.0"
  }
}
